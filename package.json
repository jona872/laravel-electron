{
  "name": "Facturas",
  "version": "1.0.0",
  "description": "Making laravel desktop application using electron js",
  "main": "main.js",
  "engines": {
    "node": ">=12.1.0"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-packager . Facturas --out=dist",
    "build-linux": "electron-packager . Facturas --overwrite --platform=linux --arch=x64 --out=dist",
    "windows-from-ubuntu": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=win32 --arch=x64 --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName='Facturas'",
    "windows-from-docker": "electron-packager . --overwrite --platform win32 --arch x64 --out=dist",
    "1": "sudo docker pull hackash/electron-windows-build",
    "2": "sudo docker run -it --rm -v ${PWD}:/project hackash/electron-windows-build",
    "3": "npm run windows-from-docker",
    "sets": "sudo chmod -R 777 dist/",
    "move": "mv dist/ /media/sf_Facu2/ACA/",
    "4": "npm run sets && npm run move",
    "compress": "cd /media/sf_Facu2/ACA/ && zip -r Facturas.zip dist",
    
    "windows-from-docker32": "electron-packager . --overwrite --platform win32 --arch ia32 --out=dist",
    "third32": "npm run windows-from-docker32"
  },
  "repository": "",
  "keywords": [
    "laravel",
    "electron",
    "desktop",
    "application"
  ],
  "author": "laravelarticle",
  "license": "cc-by-4.0",
  "devDependencies": {
    "electron": "^11.0.4",
    "electron-packager": "^12.1.0"
  },
  "dependencies": {
    "node-php-server": "^0.1.2"
  }
}
